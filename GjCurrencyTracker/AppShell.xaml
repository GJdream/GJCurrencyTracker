<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:GjCurrencyTracker.Views"
       x:Class="GjCurrencyTracker.AppShell">

    <!-- Flyout (Hamburger Menu) -->
    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent Title="Main Page" ContentTemplate="{DataTemplate views:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Alerts" Icon="alert_icon.png">
        <ShellContent Title="Alert Page" ContentTemplate="{DataTemplate views:AlertPage}" />
    </FlyoutItem>

    <FlyoutItem Title="History" Icon="history.png">
        <ShellContent Title="History Page" ContentTemplate="{DataTemplate views:HistoryPage}" />
    </FlyoutItem>

</Shell>